{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Litter Networker: Renderer Dev Server",
      "type": "shell",
      "command": "npm run dev:renderer",
      "options": {
        "cwd": "${workspaceFolder}/apps/litter-networker"
      },
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "reveal": "always",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "owner": "vite",
        "pattern": [
          {
            "regexp": "^ready in .*",
            "kind": "message",
            "message": "Vite renderer ready"
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*VITE v[\\d\\.]+ dev server running at:$",
          "endsPattern": "^\\s*ready in .*"
        }
      }
    },
    {
      "label": "Litter Networker: Electron Watcher",
      "type": "shell",
      "command": "npm run dev:electron",
      "options": {
        "cwd": "${workspaceFolder}/apps/litter-networker"
      },
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "reveal": "always",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Litter Networker: Prepare Dev Environment",
      "type": "shell",
      "command": "echo Starting Litter Networker developers environment",
      "dependsOn": [
        "Litter Networker: Renderer Dev Server",
        "Litter Networker: Electron Watcher"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false
      }
    },
    {
      "label": "lnweb-react: Dev Server",
      "type": "shell",
      "command": "npm run dev -- --host",
      "options": {
        "cwd": "${workspaceFolder}/web/lnweb-react"
      },
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "reveal": "always",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "owner": "vite",
        "pattern": [
          {
            "regexp": "^ready in .*",
            "kind": "message",
            "message": "lnweb-react dev server ready"
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*VITE v[\\d\\.]+ dev server running at:$",
          "endsPattern": "^\\s*ready in .*"
        }
      }
    }
  ]
}
