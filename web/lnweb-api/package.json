{
  "name": "lnweb-api",
  "version": "0.0.0",
  "description": "LNWeb-API",
  "main": "src/app.js",
  "author": {
    "name": ""
  },
  "scripts": {
    "test": "NODE_PATH=./lambda-layer/nodejs/node_modules:./node_modules jest"
  },
  "devDependencies": {
    "eslint": "^8.21.0",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.16.1",
    "supertest": "^7.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "eslintConfig": {},
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "src/__tests__/**/*.test.js"
    ],
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/lambda-layer/nodejs/node_modules"
    ],
    "moduleDirectories": [
      "<rootDir>/node_modules",
      "<rootDir>/lambda-layer/nodejs/node_modules"
    ],
    "globals": {
      "process.env.NODE_PATH": "<rootDir>/lambda-layer/nodejs/node_modules:./node_modules"
    }
  }
}
