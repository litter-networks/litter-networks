{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug node process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/src/server.js",
      "skipFiles": [ "<node_internals>/**" ],
      "stopOnEntry": true,
      "console": "externalTerminal",
      "env": {
        "PORT": "1337",
        "NODE_PATH": "${workspaceFolder}/lambda-layer/nodejs/node_modules"
      },
      "args": []
    }
  ],
  "compounds": [
    {
      "name": "Launch Node and Browser",
      "configurations": [
        "Debug node process",
        "localhost (Chrome)"
      ]
    }
  ]
}