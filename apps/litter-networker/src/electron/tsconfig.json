{
  "extends": "../../tsconfig.node.json",
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "../../dist/electron",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["main/**/*.ts", "preload/**/*.ts", "shared-services/**/*.ts", "../../src/shared/**/*.ts"],
  "exclude": ["../../src/renderer"]
}
